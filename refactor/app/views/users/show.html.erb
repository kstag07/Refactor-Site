<h2> Post History for: <%= current_user.email %> </h2>

<table>
  <thead>
    <tr>
      <th>Posts</th>
    </tr>
  </thead>

  <tbody>
    <% @user.posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>  

<h2> Comment History for: <%= current_user.email %> </h2>

<table>
  <thead>
    <tr>
      <th>Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @user.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>  

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>